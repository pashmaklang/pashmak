func set_once_header(str $path)
    $spliter = ('#' * 73) + '\n\n'
    
    # open file and add header
    $f = open($path, 'r')
    $content = $f->read()
    $f->close()

    $new_content = ''

    $parts = $content->split($spliter)
    if len($parts) == 1
        $new_content = $header_text + $spliter + $parts[0]
    else
	# already has the header
        return
    endif

    # add current filename to header
    $only_file_name = $path->replace('\\', '/')->split('/')[-1]
    $new_content = '#\n# ' + $only_file_name + '\n' + $new_content

    if $path->replace('\\', '/')->endswith('src' + '/' + 'pashmak.py') or $path->replace('\\', '/')->endswith('tests' + '/' + 'run.py')
        $new_content = '#!/usr/bin/env python3\n' + $new_content
    endif

    $f = open($path, 'w')
    $f->write($new_content)
    $f->close()
endfunc

import $__dir__ + '/crawler-lib.pashm'

$total_paths = []

$c = Crawler($__dir__ + '/../src', '.py')
$total_paths = [*$total_paths, *$c->files_list]

$c = Crawler($__dir__ + '/../tests', '.pashmt')
$total_paths = [*$total_paths, *$c->files_list]

$c = Crawler($__dir__ + '/../src', '.pashm')
$total_paths = [*$total_paths, *$c->files_list]

$c = Crawler($__dir__ + '/../examples', '.pashm')
$total_paths = [*$total_paths, *$c->files_list]

$c = Crawler($__dir__ + '/../scripts', '.pashm')
$total_paths = [*$total_paths, *$c->files_list]

$total_paths->sort()

$i = 0
while $i < len($total_paths)
    set_once_header($total_paths[$i])
    $i = $i + 1
endwhile

println('\033[32mHeaders updated successfully\033[0m')
