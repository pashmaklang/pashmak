import_once @sys
import_once @os

func clear()
    if $os.osname == 'nt'
        system('cls')
    else
        system('clear')
    endif
endfunc

func create_dir($dir)
     $adur = "mkdir "+$dir
     system($adur)

if $__ismain__
    define('DEBUG', true)
    define('DEBUG_HEADER_TITLE', 'Welcome to the Pashmak [' + $sys.pashmakinfo['version'] + '] Interactive Shell')
    debug()
endif
