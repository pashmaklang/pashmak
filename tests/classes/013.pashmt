--test--
class inheritance system can handle parent/child/self prop and method using

--file--

class Father
    $name = 'the Father'

    func hello
        println('Hello! i am Father')
    endfunc

    func hoho
        println('hoho father')
    endfunc

    func change_test_prop
        $this->test_prop = $this->test_prop + '111'
    endfunc

    func use_child
        $this->super('Child')->hello()
    endfunc

    func use_self
        $this->hello()
        $this->super('Father')->hello()
    endfunc
endclass

class Child < Father
    $name = 'the Child'

    func hello
        println('Hello! i am Child')
    endfunc

    func dosomething
        $this->super('Father')->hello()
        println($this->super('Father')->name)
    endfunc

    func hoho
        $this->super('Father')->hoho()
    endfunc

    func tst
        $this->test_prop = 'the test value'
        $this->super('Father')->change_test_prop()
        println($this->test_prop)
    endfunc
endclass

$f = Father()
println($f->name)
$f->hello()

$c = Child()
println($c->name)
$c->hello()

$c->dosomething()

$c->hoho()

$c->tst()

$c->use_child()

$c->use_self()

--output--
"""the Father
Hello! i am Father
the Child
Hello! i am Child
Hello! i am Father
the Father
hoho father
the test value111
Hello! i am Child
Hello! i am Child
Hello! i am Father
"""
