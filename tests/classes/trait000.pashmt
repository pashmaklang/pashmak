--test--
Trait system for classes works correctly

--file--

class MyTrait
    func from_my_trait()
        println 'my trait: ' + $this->name
    endfunc
endclass

class SecondTrait
    func hello(string $last_name)
        println 'second trait: ' + $this->name + ' ' + $last_name
    endfunc

    $trait_prop = 100
endclass

class Foo + SecondTrait
    $name = "Parsa"
endclass

class Bar + MyTrait, SecondTrait
    $name = "Mammad"
endclass


$a = Foo()
$b = Bar()

$a->hello('shah')
$b->from_my_trait()
$b->hello('mmdi')

println $a->trait_prop
println $b->trait_prop

class Trait3
    func tst()
        println "Trait 3"
    endfunc
endclass

class Trait4
    func tst()
        println "Trait 4"
    endfunc
endclass

class A < Bar + Trait3, Trait4
endclass

$b = A()
$b->from_my_trait()
$b->hello('mmdi')
$b->tst()

class Temp + Trait3, Trait4
    func tst()
        println 'my own tst'
    endfunc
endclass

$tmp = Temp()
$tmp->tst()

# ..


class T1
    func a()
        println 'a'
    endfunc
endclass

class T2 < T1
    func b()
        println 'b'
    endfunc
endclass

class Person + T2
endclass

println list(Person->__methods__->keys())

--output--
"""second trait: Parsa shah
my trait: Mammad
second trait: Mammad mmdi
100
100
my trait: Mammad
second trait: Mammad mmdi
Trait 3
my own tst
['b']
"""
