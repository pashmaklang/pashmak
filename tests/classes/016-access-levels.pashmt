--test--
Private and protected properties can be set

--file--

class Person
    $a = 1
    $b = 2
    $c = 3
    $d = 4
    $e = 5
    $f = 6
    $g = 7

    private 'b'
    private 'c', 'd'

    protected 'e'
    protected ['f', 'g']

    class Subclass
        $a = 1
        $b = 2
        private 'a'
    end
endclass

$p = Person()

println $p->__protected_props__
println $p->__private_props__

$s = Subclass()
println $s->__private_props__

--output--
"""['e', 'f', 'g']
['b', 'c', 'd']
['a']
"""
