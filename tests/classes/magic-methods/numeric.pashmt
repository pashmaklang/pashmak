--test--
class numeric magic methods working

--file--

class Person
    func __pos__
        return 'the pos'
    endfunc

    func __neg__
        return 'the neg'
    endfunc

    func __abs__
        return 'the abs'
    endfunc

    func __round__(*$n)
        return 'the round with ' + str($n)
    endfunc

    func __floor__
        return 'the floor'
    endfunc

    func __ceil__
        return 'the ceil'
    endfunc

    func __trunc__
        return 'the trunc'
    endfunc
endclass

$p = Person()

println(-$p)
println(+$p)
println(abs($p))
println(round($p, 10))
println(math.floor($p))
println(math.ceil($p))
println(math.trunc($p))

--output--
"""the neg
the pos
the abs
the round with 10
the floor
the ceil
the trunc
"""
