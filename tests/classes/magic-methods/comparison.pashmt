--test--
comparison magic methods working

--file--

class Person
    func __init__(*$args)
        $args = format_args($args)
        $this->age = int($args[0])
    endfunc

    func __eq__(*$other)
        println('LOG: eq')
        return $this->age == $other->age
    endfunc

    func __ne__(*$other)
        println('LOG: ne')
        return $this->age != $other->age
    endfunc

    func __lt__(*$other)
        println('LOG: lt')
        return $this->age < $other->age
    endfunc

    func __gt__(*$other)
        println('LOG: gt')
        return $this->age > $other->age
    endfunc

    func __le__(*$other)
        println('LOG: le')
        return $this->age <= $other->age
    endfunc

    func __ge__(*$other)
        println('LOG: ge')
        return $this->age >= $other->age
    endfunc
endclass

println(Person(40) == Person(18))
println(Person(18) == Person(18))
println(Person(18) != Person(18))
println(Person(18) != Person(20))

println(Person(18) < Person(20))
println(Person(18) < Person(17))
println(Person(18) > Person(20))
println(Person(18) > Person(17))

println(Person(18) <= Person(20))
println(Person(20) <= Person(20))
println(Person(20) <= Person(15))

println(Person(18) >= Person(20))
println(Person(20) >= Person(20))
println(Person(20) >= Person(15))

