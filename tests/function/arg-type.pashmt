--test--
error will be raised when argument type is invalid

--file--

func hello(string $name, int $age)
    println($name + ' ' + str($age))
endfunc

hello('parsa', 15)

hello(10, 10)

--with-error--
"InvalidArgument"

--output--
"""parsa 15
"""
