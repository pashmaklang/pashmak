--test--
function typed args with list item type

--file--

func hello(int|list|string $a)
    println($a)
endfunc

hello(10)
hello('hello')
hello([1, 2])

func other(str|list[int|str] $a)
    println($a)
endfunc

other('hi')
other([1, 'a', 2])
other([1, 'a', 2, True])

--output--
"""10
hello
[1, 2]
hi
[1, 'a', 2]
"""

--with-error--
"InvalidArgument"
