--test--
complicated class and func

--file--

func hi
    println('start')

    func bye
        println('bye')
    endfunc

    func foo
        println('foo start')
        func bar
            println('bar')
        endfunc
        bar()
        println('foo end')
    endfunc

    bye()

    foo()

    println('end')
endfunc

hi()
bye()

func do
    class Person
        $name = 'someone'
    endclass

    println(Person()->name)
endfunc

do()
println(Person()->name)

class First
    $first = 'the first'
    class Last
        $last = 'the last'
    endclass

    func do
        class DoClass
            $name = 'the do class'
        endclass
    endfunc
endclass

println(First()->first)
println(Last()->last)

$a = First()
$a->do()
println(DoClass()->name)

func one
    func two
        println('the two')
    endfunc

    two()

    func.delete(__namespace__() + 'two')
endfunc

one()

println(func.exists('two'))

--output--
"""start
bye
foo start
bar
foo end
end
bye
someone
someone
the first
the last
the do class
the two
False
"""
