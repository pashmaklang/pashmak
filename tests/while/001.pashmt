--test--
while loop working correct

--file--

$i = 0
while $i < 10
    println($i)
    $i = $i + 1
endwhile

$i = 0
while $i < 10
    $j = 0
    while $j < 10
        $j = $j + 1
        println(str($i) + ' : ' + str($j))
    endwhile
    $i = $i + 1
endwhile

while False
    println('not run')
endwhile

$i = 0
while $i < 10
    println("loop3: " + str($i))
    if $i == 5
        break
    endif
    $i = $i + 1
endwhile

$i = 0
while $i < 10
    println("loop3: " + str($i))
    if $i == 5
        break
    endif

    $j = 0
    while $j < $i
        println('J: ' + str($j))
        $j = $j + 1
    endwhile

    $i = $i + 1
endwhile

$i = 0
while $i < 10
    if $i == 7
        $i = 9
        continue
    endif
    println('I: ' + str($i))
    $i = $i + 1
endwhile

$i = 0
while $i < 10
    if $i == 7
        $i = 9

        $x = 0
        while $x < 5
            println('X: ' + str($x))
            $x = $x + 1
        endwhile

        continue
    endif
    println('I: ' + str($i))
    $i = $i + 1
endwhile

